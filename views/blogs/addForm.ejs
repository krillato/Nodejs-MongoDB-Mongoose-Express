<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TeeTime</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
</head>
<body>
    <%- include('../layout') %>
   <div class="py-2">
       <a href="/" class="btn btn-success">กลับหน้าแรก</a>
    </div>
    
    <hr>
    <h2> <%= data %> </h2>

    <!-- แสดง error -->
    <% if (locals.errors) { %>
        <ul class="alert alert-danger">
            <% Object.values(errors).forEach(function(error){ %>
                <li class="mx-4"><%= error.msg %></li>
            <% }); %>
        </ul>
    <% } %>

    <form action="/blogs/add" method="post">
        <div class="form-group">
            <label for="">ชื่อบทความ</label>
            <input type="text" name="title" id="" class="form-control">
        </div>
        <div class="form-group">
            <label for="">ผู้เขียน</label>
            <input type="text" name="author" id="" class="form-control">
        </div>
        <div class="form-group">
            <label for="">หมวดหมู่</label>
            <select name="category" id="" class="form-control">
                <option value="นิยาย">นิยาย</option>
                <option value="สารคดี">สารคดี</option>
                <option value="วิทยาศาสตร์">วิทยาศาสตร์</option>
            </select>
        </div>
        <input type="submit" value="บันทึก" class="btn btn-primary" >
    </form>

</body>
</html>